---
import Layout from '../layouts/Layout.astro';
import NavBar from '../components/NavBar'
---

<Layout title="Home">
	<NavBar />
	<main class="flex justify-center items-center min-h-screen min-w-full">
		<section class="flex flex-col justify-center items-center w-full gap-y-10">
			<h1 class="text-center text-2xl sm:text-4xl md:text-6xl font-semibold">Turn your spreadsheet into a website</h1>
			<p class=" text-3xl text-center">Create a website for your affiliates marketing, <br/> or just to pomote or share products with a spreadSheet.</p>
			<button class=" text-xl font-semibold text-white bg-black py-2 px-8 rounded-xl hover:bg-black/80">Get started</button>
		</section>
	</main>
</Layout>